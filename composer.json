{
  "name": "azure-oss/storage",
  "description": "This project provides a set of PHP client libraries that make it easy to access Microsoft Azure storage APIs.",
  "keywords": [
    "php",
    "azure",
    "storage",
    "sdk"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.1.0",
    "guzzlehttp/guzzle": "^7.7",
    "ext-fileinfo": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-xsl": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "mikey179/vfsstream": "^1.6",
    "friendsofphp/php-cs-fixer": "^3.17",
    "phpstan/phpstan": "^1.10",
    "symfony/var-dumper": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "AzureOSS\\Storage\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AzureOSS\\Storage\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "/tests"
    ]
  }
}
